
<h1>Listar Pizzas</h1>
<%= link_to 'Cadastrar Pizza', new_pizza_path, class: "btn btn-primary" %>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Pre√ßo</th>
        <th colspan="3" width="18%"></th>
      </tr>
    </thead>
    <tbody>

    <% if @pizzas.empty? %>
      <%= render partial: 'shared/empty_data', :locals => {:total_columns => 5} %>
    <% end %>

    <% @pizzas.each do |pizza| %>
      <tr>
        <td><%= pizza.name %></td>
        <td><%= pizza.price %></td>
        <td><%= link_to 'Visualizar', pizza_path(pizza) %></td>
        <td><%= link_to 'Editar', edit_pizza_path(pizza) %></td>
		<% if can? :delete, Pizza %>	
			<td><%= link_to 'Excluir', pizza_path(pizza),
					method: :delete,
					data: { confirm: 'Are you sure?' } %></td>
		<% end %>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>
