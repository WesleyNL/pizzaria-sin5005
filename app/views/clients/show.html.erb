<h1>Dados do cliente</h1>

<div class="panel panel-default">
  <div class="panel-heading"><h3 class="panel-title">Informações</h3></div>
  <div class="panel-body">

    <p>
      <strong>Nome:</strong>
      <%= @client.name %>
    </p>

    <p>
      <strong>Telefone:</strong>
      <%= @client.phone %>
    </p>

    <p>
      <strong>Endereço:</strong>
      <%= @client.address %>
    </p>

  </div>

  <div class="panel-footer">
    <%= render partial: 'shared/crud_buttons',
      :locals => {:edit_path => edit_client_path, :destroy_path => client_path} %>
  </div>
</div>
