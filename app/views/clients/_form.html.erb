<% if @client.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h3>
        <%= pluralize(@client.errors.count, "erro(s)") %> encontrado(s):
      </h3>
      <ul>
        <% @client.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for @client, :html => {:class => "form"} do |f| %>
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :phone %><br>
    <%= f.telephone_field :phone, class: "form-control phone" %>
  </div>

  <div class="form-group">
    <%= f.label :address %><br>
    <%= f.text_area :address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit :Salvar, class: "btn btn-primary" %>
    <%=link_to 'Cancelar', root_path,
      data: { confirm: 'Tem certeza que deseja cancelar essa operação?' },
      class: "btn btn-default" %>
  </div>
<% end %>
