
<h1>Atender Pedido</h1>

<div class="panel panel-default">
  <div class="panel-body">
    <h4>
      <strong>Número do Pedido:</strong>
      <span class="text-info"><%= @order.number_id %></span>
    </h4>
    <h4><strong>Status:</strong> <%= @order.status %></h4>

    <hr/>

    <p>
      <strong>Data de Cadastro:</strong>
      <%= full_date_alt @order.created_at %>
    </p>

    <p>
      <strong>Vendedor:</strong>
      <%= @order.employee.name %>
    </p>

    <p>
      <strong>Cliente:</strong>
      <%= @order.client.name %>
    </p>

    <%= form_with(model: @order) do |f| %>

      <div class="form-group row">
        <div class="col-md-4">
          <%= f.label :status %>:<br>
          <%= f.select(:status, OrderStatus.all, {}, { class: "form-control"}) %>
        </div>
      </div>

      <div class="form-group">
        Entregador: <br>
      </div>

      <div class="form-group">
        <%= f.submit :Atualizar, class: "btn btn-primary" %>
        <%=link_to 'Cancelar', root_path,
          data: { confirm: 'Tem certeza que deseja cancelar essa operação?' },
          class: "btn btn-default" %>
      </div>
    <% end %>


  </div>

  <div class="panel-footer hidden-print">
    <%= render partial: 'shared/crud_buttons',
      :locals => {:edit_path => edit_order_path, :destroy_path => order_path} %>
  </div>
</div>
