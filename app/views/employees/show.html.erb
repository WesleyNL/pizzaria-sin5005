<h1>Dados do funcionário</h1>

<div class="panel panel-default">
  <div class="panel-heading"><h3 class="panel-title">Informações</h3></div>
  <div class="panel-body">

    <p>
      <strong>Nome:</strong>
      <%= @employee.name %>
    </p>

    <p>
      <strong>Cargo:</strong>
      <%= @employee.office %>
    </p>

    <p>
      <strong>Salário:</strong>
      <%= @employee.salary %>
    </p>

    <p>
      <strong>Carga Horária:</strong>
      <%= @employee.workload %>
    </p>

    <p>
      <strong>Telefone:</strong>
      <%= @employee.telephone %>
    </p>

  </div>
</div>
