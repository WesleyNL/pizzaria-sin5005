<div id="result"></div>

<div class="wrapper" >
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => "form form-signin" }) do |f| %>
    <h2 class="form-signin-heading">Esqueceu sua senha?</h2>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Informe o e-mail cadastrado" %>
    </div>

    <div class="actions">
      <%= f.submit "Redefinir senha", class: "btn btn-lg btn-primary btn-block" %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
