<div id="result"></div>

<div class="wrapper" >

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form form-signin"}) do |f| %>
    <h2 class="form-signin-heading">Log in</h2>

    <div class="form-group">
      <%= f.text_field :username, autofocus: true, class: "form-control", placeholder: "nome-de-usuario" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "senha" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="">
        <%= f.check_box :remember_me, id: "rememberMe" %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>


</div>
